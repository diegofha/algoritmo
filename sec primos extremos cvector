void cargarvector(int v[],int n)
	{int i,x;
     for(i=0;i<n;i++){
		 cout<<"ingrese elemento :";
		 cin>>x;
		 v[i]=x;
		 }
}

void mostrarvector(int v[],int n){
	int i;
	for(i=0;i<n;i++){
		//cout<<"\n";
		cout<<v[i]<<" ";
	}
}

void main(){
	int n,v[100];
