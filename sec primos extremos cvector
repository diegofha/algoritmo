//secuencia de primos extremos :n=7
1 3 7 13 11 5 2
#include <iostream>
#include <conio.h>

using namespace std;

bool esprimo(int n){
	int i;
	bool k=true;
	for(i=2;i<n;i++){
		if(n%i==0){
			k=false;
		}
	}
	return(k);
}

 int obtenernumprimo(int v[],int n){
	 int i=0,cp=0;
	 while(cp<n){
		 i++;
		 if(esprimo(v[i])==true){
			cp++;
		 }
	 }
	 return(i);
 }

 void  cargarpatronprimo(int v[],int n){
	 int i;
	 for(i=0;i<cp;i++){
		 v[i]=obtenernumprimo(i+1);
	 }
 }

