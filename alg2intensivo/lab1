//program para encontrar el mayor  cercano

int menor(int v[],int n){
	int men=999999;
	for(int i=0;i<n;i++){
		if(v[i]<men){
			men=v[i];
		}
	}return men;
}
int mayorcercano(int v[],int n,int x){
int i,v2[100],j=0;
  for(i=0;i<n;i++){
	  if(v[i]>x){
		v2[j]=v[i];
		
		j++;
	  }
  
	}
  int c;
return (menor(v2,j));

 }
