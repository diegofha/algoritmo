#include <iostream>
#include <conio.h>

using namespace std;

void cargar(int v[],int n){
	int i;
	for(i=0;i<n;i++){
		cout<<"ingrese ["<<i<<"]: ";
		cin>>v[i];
		cout<<endl;
	}

}
void mostrar(int v[],int n){
	int i;
	for(i=0;i<n;i++){
		cout<<v[i]<<" ";
	}

}
void insertar(int v[],int &n,int x){
	int i,band=1,aux,aux2,a,k;
	for(i=0;i<n;i++){
		if(v[i]>x){
			a=i;
			aux=v[i];
			v[i]=x;
			i=n;
			n++;
		}else{
			if(i==n-1){
			v[i+1]=x;
			n++;
			i=n;
			a=n;
			}
		}
	}
	
	for(k=a+1;k<n;k++){
		if(band==1){
		aux2=v[k];
		v[k]=aux;
		band=2;
		}else{
		aux=v[k];
		v[k]=aux2;
		band=1;
		}
	}

}
int casillanum(int v[],int n,int a){
int i,b,may=0;
for(i=a;i<n;i++){
	if(v[i]>may){
		may=v[i];
		b=i;
	}
}return(b);
}
int obtenermayor(int v[],int n,int a){
int i,may=0;
for(i=a;i<n;i++){
	if(v[i]>may){
		may=v[i];
		
	}
}
return(may);
}

bool estadescendentemente(int v[],int n){
	int men=99999,i;
	for(i=0;i<n;i++){
		if(v[i]<men){
			men=v[i];
		}else{
			return(false);
		}
	}return(true);
}
		
void ordenarsinmetodoordenacion(int v[],int n){
int i=0,vec[100],num,aux,a;
      do{
		 
        num=obtenermayor(v,n,i);
		a=casillanum(v,n,i);
		if(v[i]<num && v[i]!=num){
		aux=v[i];
		v[i]=num;
		v[a]=aux;
	   
		}
		i++;
		
	  }while(estadescendentemente(v,n)==false);
	}
void main(){
	int n,v[100],x;
	cout<<"\ntamaÃ±o del vector"<<endl;
	cin>>n;
	cargar(v,n);
	mostrar(v,n);
	cout<<endl;
	//cout<<"ingrese numero para insertar :\n";
	//cin>>x;
	//insertar(v,n,x);
	///mostrar(v,n);
	ordenarsinmetodoordenacion(v,n);
	cout<<endl;
	mostrar(v,n);
getch();
}
