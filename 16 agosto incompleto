#include <iostream>
#include <conio.h>
#include <math.h>
using namespace std;



int unirnumeros(int a,int b){
int nro,ret=0;

	while(b>0){
		nro=b%10;
		ret=(a*10)+nro;
		b=b/10;
	         }
	return (ret);
}
void main(){
	int a,b,r;
	cout<<"introducir numeros ";
	cin>>a;
	cin>>b;
	r=unirnumeros(a,b);
	cout<<"la union de los digitos es: "<<endl<<r;
	getch();
}
