#include <iostream>
#include <conio.h>
using namespace std;

void main(){
	int n,cont=0,mat[100][100],paso=1,i,j,h,k;

	cout<<"tamaÃ±o de la matriz :";
	cin>>n;
	 for( i=0;i<n;i++){
		 for(int j=0;j<n;j++){
			 mat[i][j]=0;
		 }
	 }
	 for(i=0;i<n;i++){
		 if(paso==1){
			 for(int j=0;j<n;j++){
				 if(mat[i][j]==0){
					 mat[i][j]=cont++;
				 }
			 }
			 paso++;
		 }
	 if(paso==2){
		 for(int h=n-1;h>=0;h--){
			 if(mat[h][n-(i+1)]==0){
				 mat[h][n-(i+1)]=cont++;
			 }
		 }
		 paso++;
	 }

	 if(paso==3){
		 for(int k=n-1;k>=0;k--){
			 if(mat[n-(i+1)][k]==0){
				 mat[n-(i+1)][k]=cont++;
			 }
		 }
		 paso++;
	 }
	 if(paso==4){
		 for(int k=n-1;k>=0;k--){
			 if(mat[k][i]==0){
				 mat[k][i]=cont++;
			 }
		 }
		 paso=1;
	 }
}
	 for(i=0;i<n;i++){
		 for(j=0;j<n;j++){
			cout<<mat[i][j]<<" ";
		 }cout<<"\n";
	 }
	 getch();
}
