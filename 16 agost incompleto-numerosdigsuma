#include <iostream>
#include <conio.h>
#include <math.h>
using namespace std;
bool verifesprimo (int n)
{
	int i;
	bool k = true;
	for(i=2;i<n;i++){
		if(n % i == 0){
			k=false;
	             	}
	              }
	return (k);
}
int sumardigitosprimo(int n){
	int d,s=0;
	while(n>0){
		d=n%10;
		if(verifesprimo(d) ==true){
			s=s+d;
		}
		n=n/10;
	}
	return (s);
}


int unirnumeros(int a,int b){
int nro,ret=0;

	while(b>0){
		nro=b%10;
		ret=(a*10)+nro;
		b=b/10;
	         }
	return (ret);
}
void main(){
	int a,b,r;
	cout<<"introducir numeros ";
	cin>>a;
	cin>>b;
	r=unirnumeros(a,b);
	cout<<"la union de los digitos es: "<<endl<<r;
	getch();
}
