#include <iostream>
#include <conio.h>

using namespace std;

void mostrar(int v[],int n){
	int i;
	for(i=0;i<n;i++){
		cout<<"elemento:["<<i<<"] :";
		cout<<v[i]<< " ";
	}
	cout<<endl;
}


bool esprimo(int n ){
	int i;
   bool k=true;
for(i=2;i<n;i++){
	  if (n%i==0){
		  k=false;
	  }
 }
return(k);
}


void cargar(int v[],int n){
int i,x;
for (i=0;i<n;i++){
	cout<<"elemento :";
	cin>>x;
	v[i]=x;
    }

}


    void ordenar(int v[],int n){
     int i,c,k,m,d;
   
	for(i=0;i<n;i++){
		k=i;
	    c=0;
		m=0;
	    while(v[i]>0){ 
		d=v[i]%10;
		if(esprimo(d)==true){
			c++;//contador de digitos primos
			v[k]=(m*10)+d;
		  }
		v[i]=v[i]/10;
		
	    }
		if(c==1){
		v[i]=0;}
	  }
	 }


void main(){
	int n,v[100];
	cout<<"ingrese tamaÃ±o del vector: ";
	cin>>n;
	cargar(v,n);
	mostrar(v,n);
	ordenar(v,n);
	
	mostrar(v,n);
	getch();
}
