//ELIMINAR LOS ELEMENTOS PRIMOS DE UN VECTOR
#include <iostream>
#include <conio.h>

using namespace std;

bool esprimo(int n){
	int i;
	bool k=true;
	for(i=2;i<n;i++){
		if(n%i==0){
			k=false;
		}
	}
	return(k);
}


int contadoreprimos(int v[],int n){
	//int i,cp;<--------TAMBIEN FUNCIONA!!!!!
	int i,cp=0;
	for(i=0;i<n;i++){
		if(esprimo(v[i])==true){
			cp=cp+1;
		}
		
	}
	return(cp);

}
void cargarvector(int v[],int n)
	{int i,x;
     for(i=0;i<n;i++){
		 cout<<"ingrese elemento :";
		 cin>>x;
		 v[i]=x;
		 }
}


void eliminarprimos(int v[],int n,int vN[],int  &x){

	int i,r,cp,m;
	cp=contadoreprimos(v,n);
	while(m<cp){
	     for(i=0;i<n;i++){
			 
	         if(esprimo(v[i])==false){
			     vN[r]=v[i];
				 r++;
				 
				 x=r;
		    }
			 else{
				  m=m+1;
			  }
			 
		 
	       }
	}
}





void mostrarvector(int v[],int n){
	int i;
	for(i=0;i<n;i++){
		//cout<<"\n";
		cout<<v[i]<<" ";
	}
}

void main(){
	int n,vN[100],v[100],x;
	cout<<"ingrese tamaÃ±o del vector:";
	cin>>n;
	cargarvector(v,n);
	eliminarprimos(v,n,vN,x);
	mostrarvector(vN,x);
	getch();
}

   
