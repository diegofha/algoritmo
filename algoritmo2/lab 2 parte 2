void mostrar(int tamanoC,float C[N],string texto){
	int i=0;
		while(i<tamanoC)
		{
		cout<<"polinomio "<<texto<<"["<<i<<"] :"<<endl;
		i++;
		}
	  }



void suma(int tamanoA,float A[N],int tamanoB,float B[N],int &tamanoC,float C[N])
	{
	int i=0,j=0,k=0;
	  while(i<tamanoA && j<tamanoB)
	  {
	  C[k]=A[i]+B[j];
	  i++;
	  j++;
	  k++;

	  }
	  while(i<tamanoA)
	  {
	  C[k]=A[i];
	  i++;
	  k++;
	  }
	    while(j<tamanoB)
		{
	       C[k]=B[j];
	       j++;
	       k++;
	  } 
		tamanoC=k;
}  
